<div class="col-xs-9">
	<span class="title table-title">
		<h1>Books</h1>
	</span>
	<table class="table table-striped">
			<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<td>Opinion</td>
					</tr>
				</thead>

				<tbody>
					<% books.each do |book| %>
						<tr>
							<td>
								<%= link_to user_path(book.user.id) do %>
									<%= attachment_image_tag book.user, :profile_image, :fill , 45, 45, format: 'jpeg', fallback: "no_image.jpg" %>
								<% end %>
							</td>
							<td>
								<%= link_to book_path(book) do %>
									<%= book.title %>
								<% end %>
							</td>
							<td>
								<%= book.body %>
							</td>
						</tr>
					<% end %>
				</tbody>
				

			</table>
		</div>