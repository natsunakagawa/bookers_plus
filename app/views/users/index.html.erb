
	<div class="row">
		
		<%= render 'books/form', user: @user, book: @book %>

		<div class="col-xs-9">
			<span class="title table-title">
				<h1>Users</h1>
			</span>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th class="colspan=1"></th>
					</tr>
						
				</thead>

				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td>
								<%= attachment_image_tag user, :profile_image, :fill, 45, 45, format: 'jpeg', fallback: "no_image.jpg" %>
							</td>
							<td>
								<%= user.name %>
							</td>
							<td>
								<%= link_to "Show", user_path(user) %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
