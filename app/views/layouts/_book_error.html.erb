
	<div class="col-xs-12">
		<% if book.errors.any? %>
			<div class="alert alert-warning">
				<span>
					<h1 style="color: red;">error!</h1>
				</span>
				<ul>
					<% book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
	</div>